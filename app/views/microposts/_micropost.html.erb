<% unless defined? parent %>
  <li id="micropost-<%= micropost.id %>">
<% else %>
  <div class="parent_micropost">
<% end %>
    <% unless defined? dont_show_who_reposted or
              @user.following?(micropost.user) or
              @user == micropost.user or
              defined? parent %>
        <%= micropost.followings_who_reposted(@user).first.name %>
        <%= (micropost.followings_who_reposted(@user).count > 1 ? 'and others' : '') %>
        reposted this<br><br>
    <% end %>
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content">
      <%= micropost.content %>
      <%= image_tag micropost.display_image, class: 'content-image' if micropost.image.attached? %>
      <% unless micropost.parent_id.nil? %>
        <%= render 'microposts/parent', micropost: micropost %>
      <% end %>
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
      <span id="repost_count-<%= micropost.id %>">
        <%= pluralize(micropost.rqcount, 'repost') %>
      </span>
      <span id="comment_count-<%= micropost.id %>">
        <%= pluralize(micropost.comments.count, 'comment') %>
      </span>
      <span id="like_count-<%= micropost.id %>">
        <%= pluralize(micropost.likes.count, 'like') %>
      </span>
      <%= link_to "Quote", quote_micropost_path(id: micropost.id) if logged_in? %>
      <%= render 'microposts/repost_form', micropost: micropost if logged_in? %>
      <%= link_to "Comment", micropost if logged_in? %>
      <%= render 'microposts/like_form', micropost: micropost if logged_in? %>
      <% if current_user?(micropost.user) %>
        <%= link_to "Delete", micropost, method: :delete,
                                         data: { confirm: "You sure?" } %>
      <% end %>
      <%= link_to "Edit", edit_micropost_path(micropost) if current_user?(micropost.user) %>
    </span>
<% unless defined? parent %>
  </li>
<% else %>
  </div>
<% end %>